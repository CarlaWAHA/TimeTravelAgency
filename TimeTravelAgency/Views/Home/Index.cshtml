@model List<TimeTravelAgency.Models.Destination>

@{
    ViewData["Title"] = "Accueil";
}

<section class="hero">
    <video autoplay muted loop playsinline class="hero-video">
        <source src="~/videos/hero.mp4" type="video/mp4" />
    </video>

    <div class="hero-overlay"></div>

    <div class="hero-content">
        <h1>Voyagez au-delà du temps.</h1>
        <p class="subtitle">
            Explorez les plus grandes époques de l’humanité et de la préhistoire
            avec une agence de voyage temporel de luxe.
        </p>

        <div class="hero-buttons">
            <a asp-controller="Destination" asp-action="Index" class="btn-primary">
                Explorer les destinations
            </a>

            <a href="#chat" class="btn-secondary">
                Parler au conseiller IA
            </a>
        </div>
    </div>
</section>

<section class="destinations-section">
    <h2>Nos Destinations</h2>

    <div class="cards-container">
        @foreach (var destination in Model)
        {
            <div class="card">
                <img src="@destination.ImageUrl" alt="@destination.Name" loading="lazy" />

                <div class="card-body">
                    <h3>@destination.Name</h3>
                    <p class="era">@destination.Era</p>
                    <p>@destination.ShortDescription</p>

                    <div class="card-footer">
                        <span class="price">À partir de @destination.PriceFrom €</span>
                        <a asp-controller="Destination"
                           asp-action="Details"
                           asp-route-id="@destination.Id"
                           class="btn-small">
                            Découvrir →
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section id="chat" class="chat-info">
    <h2>Un conseiller IA à votre service</h2>
    <p>
        Notre assistant virtuel vous aide à choisir la meilleure époque selon vos envies.
        Posez-lui vos questions via la bulle en bas à droite.
    </p>
</section>
